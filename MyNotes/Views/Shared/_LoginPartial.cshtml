@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> SignInManager;

<ul class="navbar-nav ms-auto">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Acount" asp-action="Logout">Logout</a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Acount" asp-action="Login">Login</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-controller="Acount" asp-action="Register">Register</a>
		</li>
	}
</ul>

